<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="save_button">
        <item name="android:textColor">?attr/color_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="based">
        <item name="android:textColor">?attr/label_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="based.edit">
        <item name="android:textColorHint">?attr/label_tertiary</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">10</item>
        <item name="android:minLines">3</item>
    </style>

    <style name="big_based" parent="based">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="big_based.blue">
        <item name="android:textColor">?attr/color_blue</item>
    </style>

    <style name="supporting">
        <item name="android:textColor">?attr/label_tertiary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="small_supporting" parent="supporting">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="small_supporting.blue">
        <item name="android:textColor">?attr/color_blue</item>
    </style>

    <style name="alert">
        <item name="android:textColor">?attr/color_red</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>